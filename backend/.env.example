# WOLKNOW Backend Configuration
# Copy this file to .env and fill in your values

# Environment Settings
ENVIRONMENT=development              # development | production
DEBUG=True                            # True for dev, False for prod
LOG_LEVEL=debug                       # debug | info | warning | error | critical

# Database - PostgreSQL
DATABASE_URL=postgresql://holdwallet:password@localhost:5432/wolknow_db
# Production example:
# DATABASE_URL=postgresql://doadmin:PASSWORD@db-host.db.ondigitalocean.com:25060/defaultdb

# Security Keys
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Configuration
ROOT_PATH=v1
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:5173", "https://wolknow.com"]
FRONTEND_URL=http://localhost:3000

# Blockchain RPC URLs
ETHEREUM_RPC_URL=https://eth-mainnet.alchemyapi.io/v2/your-key
POLYGON_RPC_URL=https://polygon-rpc.com
BSC_RPC_URL=https://bsc-dataseed.binance.org

# Bitcoin APIs
BTC_API_URL=https://blockstream.info/api

# Caching & Background Jobs
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# API Keys (Optional)
COINGECKO_API_KEY=your-coingecko-api-key
POLYGONSCAN_API_KEY=your-polygonscan-api-key
ETHERSCAN_API_KEY=your-etherscan-api-key
BSCSCAN_API_KEY=your-bscscan-api-key

# Payment Gateway Integration
TRANSFBANK_ENABLED=false
TRANSFBANK_API_URL=https://api.transfbank.com.br/v1
TRANSFBANK_API_KEY=your-transfbank-key
TRANSFBANK_WEBHOOK_SECRET=your-webhook-secret

# ===== BANCO DO BRASIL API (PIX) =====
# Obtenha credenciais em: https://developers.bb.com.br
# Documentação: https://apoio.developers.bb.com.br/referency/post/5ffc0436a1d06d0012dcb5b1

# Ambiente: sandbox ou production
BB_ENVIRONMENT=sandbox

# Credenciais OAuth 2.0
BB_CLIENT_ID=your-client-id
BB_CLIENT_SECRET=your-client-secret

# App Key (identificador da aplicação)
BB_GW_DEV_APP_KEY=your-gw-dev-app-key

# Chave PIX da empresa (CNPJ)
BB_PIX_KEY=24.275.355/0001-51

# URL do webhook para receber notificações de pagamento
# IMPORTANTE: Deve ser HTTPS com certificado válido
BB_WEBHOOK_URL=https://api.wolknow.com/webhooks/bb/pix

# Secret para validação de assinatura dos webhooks (opcional)
BB_WEBHOOK_SECRET=your-webhook-secret

# Email Configuration (SMTP)
SMTP_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

