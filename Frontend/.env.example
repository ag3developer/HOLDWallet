# Node Environment
NODE_ENV=development

# API Configuration
# Development:
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000/ws
# Production:
# VITE_API_URL=https://api.wolknow.com
# VITE_WS_URL=wss://api.wolknow.com/ws

# Application Settings
VITE_APP_NAME=HOLD Wallet
VITE_APP_VERSION=1.0.0
VITE_APP_URL=http://localhost:5173

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_SENTRY=false
VITE_ENABLE_PERFORMANCE_MONITORING=false

# Optional: Sentry for error tracking
# VITE_SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxxxxx

# Optional: Datadog for monitoring
# VITE_DATADOG_APPLICATION_ID=xxx
# VITE_DATADOG_CLIENT_TOKEN=xxx
VITE_GOOGLE_ANALYTICS_ID=

# Configurações de desenvolvimento
VITE_DEBUG=true
VITE_MOCK_API=false
